---
import {Content as TourContent} from '../content/Tour.md';
import Logo from '../components/Logo.astro';
import '../styles/global.css';
import '../styles/home.css';
import PreactCounter from '../components/PreactCounter.jsx';
import VueCounter from '../components/VueCounter.vue';

import { Foo } from '@lloydjatkinson/astro-integration-demo-components';
import {
	Component,
	SnipcartSetup,
	SnipcartTotalPrice,
	SnipcartItemsCount,
	SnipcartCheckout,
	SnipcartProduct,
	SnipcartProductWithDynamicQuantity,
	SnipcartProductWithSelection,
	SnipcartQuantityBinding,
} from '@lloydjatkinson/astro-integration-demo-components/astro';
// import { SnipcartProductBinding } from '@lloydjatkinson/astro-integration-demo-components/vue';

import {
	ProductGrid,
	ProductCard,
} from '@lloydjatkinson/astro-integration-demo-design-system/astro';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'My Astro Site';

const foos: Foo[] = [
	{ bar: 'apple', qux: 'banana' },
	{ bar: 'orange', qux: 'pear' },
];

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />

	<style>
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);
		}
		article {
			padding-top: 2em;
			line-height: 1.5;
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: 70ch;
		}
		.banner {
			text-align: center;
			font-size: 1.2rem;
			background: var(--color-light);
			padding: 1em 1.5em;
			padding-left: 0.75em;
			border-radius: 4px;
		}

		button.snipcart-button-primary {
			background-color: #1a4db3 !important;
		}

	</style>
	<style is:global>
		pre {
			padding: 1rem;
		}
	</style>
	<SnipcartSetup />
</head>

<body>
	<main>
		<header>
			<div>
				<Logo width={60} height={80} />
				<h1>Welcome to <a href="https://astro.build/">Astro</a></h1>
			</div>
		</header>

		<Component foos={foos} />
		
		<div class="p-2 bg-white">
			<ProductGrid
				as="section">
				<ProductCard
					id="SKU-1001"
					name="T-Shirt"
					description="Premium quality cotton for maximum softness"
					price={ 12.99 }
					currency="¬£" />
				<ProductCard
					id="SKU-1002"
					name="T-Shirt"
					description="Premium quality cotton for maximum softness"
					price={ 12.99 }
					currency="¬£" />
				<ProductCard
					id="SKU-1003"
					name="T-Shirt"
					description="Premium quality cotton for maximum softness"
					price={ 12.99 }
					currency="¬£" />
			</ProductGrid>

		</div>

<!-- <SnipcartProduct
	id="SKU-0001"
	name="Standard T-Shirt"
	price={ 6.99 }
	description="Every day basic t-shirt">
	T-Shirt
</SnipcartProduct> -->

<SnipcartProductWithDynamicQuantity
	id="SKU-0001"
	name="Standard T-Shirt"
	price={ 6.99 }
	description="Every day basic t-shirt"
	quantity={ 10 }
	minimumQuantity={ 1 }>
	T-Shirt
</SnipcartProductWithDynamicQuantity>

<div class="bg-blue-100 p-4">
	<SnipcartProductWithSelection
		as="button"
		id="SKU-0003"
		name="Custom T-Shirt"
		description="Testing stuff"
		price={ 12.99 }
		customFields={[
		    { name: 'Size', options: ['Small', 'Medium', 'Large[+30.00]'], placeholder: 'Pink', required: true },
		    { name: 'Pattern', options: ['Abstract', 'Neon', 'Tiger'] }
		]}>
		Hello world
	</SnipcartProductWithSelection>
</div>


<div class="text-blue-800 font-bold">
	<SnipcartTotalPrice />
</div>

<div class="flex flex-col gap-4">
	<div class="py-4 bg-green-100">
		<SnipcartProduct
			as="button"
			id="SKU-0002"
			name="Standard T-Shirt"
			price={ 12.99 }
			description="Every day basic t-shirt"
			image="/green-t-shirt.jpg"
			categories={ ['cotton', 'clothes', 'green'] }
			metadata={ { hello: 'world' } }
			quantity={ 2 }
			minimumQuantity={ 2 }
			maximumQuantity={ 10 }
			quantityStep={ 2 }
			dimensions={{
				weightInGrams: 0.5,
				widthInCentimeters: 10,
				heightInCentimeters: 10,
				lengthInCentimeters: 10,
			}}
			customFields={[
				// { name: 'Size', options: ['Small', 'Medium', 'Large[+30.00]'], placeholder: 'Pink', required: true },
				{ name: 'Size', options: ['Small', 'Medium', 'Large[+30.00]'], placeholder: 'Pink', required: true },
				{ name: 'Pattern', options: ['Abstract', 'Neon', 'Tiger'] }
			]}
			shippable={ true }
			hasTaxesIncluded={ true }
			taxes={ ['foo', 'bar'] }>
			Add new item to basket
		</SnipcartProduct>
	</div>

	<div class="py-4 bg-blue-100">
		<SnipcartProduct
			as="button"
			id="SKU-0003"
			name="Standard T-Shirt"
			price={ 12.99 }
			description="Every day basic t-shirt"
			image="/blue-t-shirt.jpg"
			categories={ ['cotton', 'clothes', 'blue'] }>
			Add new item to basket
		</SnipcartProduct>
	</div>

	<div class="py-4 bg-red-100">
		<SnipcartProduct
			as="button"
			id="SKU-0004"
			name="Standard T-Shirt"
			price={ 12.99 }
			description="Every day basic t-shirt"
			image="/red-t-shirt.jpg"
			categories={ ['cotton', 'clothes', 'red'] }
			>
			Add new item to basket
		</SnipcartProduct>
	</div>
</div>

<SnipcartItemsCount as="div" />

<button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
	<SnipcartCheckout as="span">Open your basket</SnipcartCheckout>
</button>

<button class="snipcart-checkout">Click here to checkout</button>





<button class="snipcart-add-item"
  data-item-id="starry-night2"
  data-item-price="79.99"
  data-item-url="/paintings/starry-night"
  data-item-description="High-quality replica of The Starry Night by the Dutch post-impressionist painter Vincent van Gogh."
  data-item-image="/assets/images/starry-night.jpg"
  data-item-name="The Starry Night"
  data-item-custom1-name="Frame color"
  data-item-custom1-options="Black|Brown|Gold">
  Add to cart
</button>

		<article>
			<div class="banner">
				<p><strong>üßë‚ÄçüöÄ Seasoned astronaut?</strong> Delete this template and have fun!</p>
			</div>
			<TourContent />
		</article>

		<!--

		You can also use imported framework components directly in your markup!
		
		Note: by default, these components are NOT interactive on the client.
		The `client:visible` directive tells Astro to make it interactive.
		
		See https://docs.astro.build/core-concepts/component-hydration/ 

		-->

		<PreactCounter client:load />

		<VueCounter client:load />

		<!-- <SnipcartProductBinding client:load /> -->
	</main>
</body>
</html>
