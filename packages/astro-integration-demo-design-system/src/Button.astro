---
import { Element, SnipcartProduct } from '@lloydjatkinson/astro-integration-demo-components';

export interface Style {
    fullWidth?: boolean;
    variant?: 'primary' | 'secondary' | 'tertiary';
    backgroundColor?: string;
    color?: string;
}

export type Props = Element & Style;

const { 
    fullWidth = false,
} = Astro.props as Props;
---

<button
    type="button"
    class:list={[ 'bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-white hover:bg-indigo-700', { 'w-full': fullWidth } ]}>
    <slot />
</button>