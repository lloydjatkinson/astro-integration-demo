---
import { Element, SnipcartProduct } from './types';

export type Props = Element & Pick<SnipcartProduct, 'quantity' | 'quantityStep' | 'minimumQuantity' | 'maximumQuantity'>;

const {
    as: Element = 'div',
    quantity = 0,
    quantityStep = 1,
    minimumQuantity,
    maximumQuantity
} = Astro.props as Props;
---

<input
    type="number"
    x-data=`{
        quantity: ${ quantity },
        quantityStep: ${ quantityStep },
        minumumQuantity: ${ minimumQuantity },
        maximumQuantity: ${ maximumQuantity },
    }`
    x-model.number="quantity"
    :data-item-quantity="quantity"
    :data-item-quantity-step="quantityStep"
    :data-item-min-quantity="minimumQuantity"
    :data-item-max-quantity="maximumQuantity">